{config_load file="lang"}

<form method="post" name="connection">
  <div class="loginBox">

    <div class="txt"> {#login#}</div>
    <div class="input"><input type="text" name="connection_login" value="" size="30" /></div>

    <div class="clearBoth"></div>

    <div class="txt">{#password#}</div>
    <div class="input"><input type="password" name="connection_password" value="" size="30" /></div>

    <div class="clearBoth"></div>

    <input type="submit" class="button" value="{#connect#}" />

    {if $login_false == true}
    <div class="login_incorrect">{#login_incorrect#}</div>
    {/if}
  </div>
</form>

