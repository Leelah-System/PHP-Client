.loginBox
{
  border: 3px solid black;
  width:300px;
  margin:auto;
  padding:25px;
 }

.loginBox .txt
{
  float:left;
  width:100px;
  font-weight: bold;
  font-size: 12px;
  padding-top:3px;
  text-align:left;
  padding-right:10px;
 }

.loginBox .input
{
  float:left;
  margin-bottom:5px;
 }

.loginBox .button
{
  width:96%;
  text-align:center;
  margin-top:15px;
 }

.loginBox .login_incorrect
{
  color:red;
  font-weight:bold;
  font-style:italic;
  font-size:13px;
  text-align:center;
  margin-top:8px;
 }